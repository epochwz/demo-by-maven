<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

  <!-- 配置目标类 -->
  <bean id="userDao" class="fun.epoch.learn.spring.aop.target.UserDao"/>
  <bean id="productDao" class="fun.epoch.learn.spring.aop.target.ProductDao"/>

  <!-- 配置通知类 -->
  <bean id="myBeforeAdvice" class="fun.epoch.learn.spring.aop.springaop.autoproxy.MyBeforeAdvice"/>
  <bean id="myAfterAdvice" class="fun.epoch.learn.spring.aop.springaop.autoproxy.MyAfterAdvice"/>

  <!-- 配置代理类 (基于 Bean Name 的自动代理) -->
  <bean class="org.springframework.aop.framework.autoproxy.BeanNameAutoProxyCreator">
    <!-- 切点 -->
    <property name="beanNames" value="*Dao"/>
    <!-- 通知 -->
    <property name="interceptorNames" value="myBeforeAdvice,myAfterAdvice"/>
  </bean>
</beans>